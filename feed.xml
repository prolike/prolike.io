---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title | xml_escape }} - Stories</title>
    <description>{% if site.description %}{{ site.description | xml_escape }}{% endif %}</description>
    <link>
    {{ site.url }}</link>
    {% for post in site.stories %}
      {% unless story.link %}
      <item>
        <title>{{ story.title | xml_escape }}</title>
        <description>
          {% if story.image %}
            <![CDATA[<img src="{{ site.url }}{{ story.image }}" />]]>
          {% endif %}
          {% if story.excerpt %}
            {{ story.excerpt | xml_escape }}
          {% else %}
            {{ story.content | xml_escape }}
          {% endif %}
        </description>
        <pubDate>{{ story.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
        <link>
        {{ site.url }}{{ story.url }}</link>
        <guid isPermaLink="true">{{ site.url }}{{ story.url }}</guid>
      </item>
      {% endunless %}
    {% endfor %}
  </channel>
</rss>